def calcular_puntos_quidditch(eventos):
  puntos = 0
  for evento in eventos:
    if evento == "goal":
       puntos += 10
    elif evento == "snitch":
       puntos += 150
    elif evento == "foul":
      puntos -= 30

  return puntos
  
#Lista de eventos del juego de quidditch
quidditch_events = ["goal", "snitch", "foul", "snitch", "goal"]

#Calcular los puntos finales
puntos_finales = calcular_puntos_quidditch(quidditch_events)

#Mostrar el resultado}
print(f"Puntos finales de Harry Potter en el juego de quidditch. {puntos_finales} puntos")

